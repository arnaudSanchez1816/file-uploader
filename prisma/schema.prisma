generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime @map("expires_at")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  files File[]
}

model File {
  id Int @id @default(autoincrement())
  name String
  uploadedAt DateTime @db.Timestamptz @map("uploaded_at")
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int @map("owner_id")
}