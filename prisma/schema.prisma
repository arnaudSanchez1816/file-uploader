generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime @map("expires_at")

  @@map("sessions")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  files File[]

  @@map("users")
}

model File {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @db.Timestamptz @default(now()) @map("created_at")
  type FileType @default(FOLDER)
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int @map("owner_id")
  
  parentId Int? @map("parent_id")
  parent File? @relation("ChildFiles", fields: [parentId], references: [id], onDelete: Cascade)
  childFiles File[] @relation("ChildFiles")

  @@map("files")
}

enum FileType {
  FILE
  FOLDER
}