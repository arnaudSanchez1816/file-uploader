<dialog id="file-details-dialog" class="modal">
    <div class="modal-box">
        <h3 class="text-lg font-bold mb-2">File details</h3>
        <div>
            <p><span>Name : </span><span class="file-name"></span></p>
            <p><span>Size : </span><span class="file-size"></span></p>
            <p><span>Created : </span><span class="file-created"></span></p>
        </div>
        <div class="modal-action">
            <a href="" role="button" class="download btn btn-primary"
                >Download</a
            >
            <% if (!locals.sharedFolder) { %>
            <form method="post" action="" class="delete">
                <button type="submit" class="btn btn-error">Delete</button>
            </form>
            <% } %>
            <form method="dialog">
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button aria-hidden="true">Close</button>
    </form>
</dialog>
