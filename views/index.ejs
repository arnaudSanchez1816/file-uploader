<%- include('partials/head.ejs') %>
<main>
    <%- include('partials/header.ejs') %>
    <div class="hero min-h-screen bg-base-200">
        <div class="hero-content w-full flex-col lg:flex-row-reverse">
            <div
                class="card w-full max-w-sm shrink-0 bg-base-100 shadow-2xl"
                id="login-form-card"
            >
                <div class="card-body">
                    <h1 class="mx-auto text-2xl font-bold">Login</h1>
                    <form action="/signin" method="post" id="login-form">
                        <fieldset class="fieldset">
                            <label class="validator input" for="login-email">
                                <svg
                                    class="h-[1em] shrink-0 opacity-50"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                >
                                    <g
                                        stroke-linejoin="round"
                                        stroke-linecap="round"
                                        stroke-width="2.5"
                                        fill="none"
                                        stroke="currentColor"
                                    >
                                        <rect
                                            width="20"
                                            height="16"
                                            x="2"
                                            y="4"
                                            rx="2"
                                        ></rect>
                                        <path
                                            d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                        ></path>
                                    </g>
                                </svg>
                                <input
                                    id="login-email"
                                    type="email"
                                    placeholder="Email"
                                    name="email"
                                    required
                                />
                            </label>
                            <div class="validator-hint">Required</div>
                            <label class="validator input" for="login-password">
                                <svg
                                    class="h-[1em] shrink-0 opacity-50"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                >
                                    <g
                                        stroke-linejoin="round"
                                        stroke-linecap="round"
                                        stroke-width="2.5"
                                        fill="none"
                                        stroke="currentColor"
                                    >
                                        <path
                                            d="M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z"
                                        ></path>
                                        <circle
                                            cx="16.5"
                                            cy="7.5"
                                            r=".5"
                                            fill="currentColor"
                                        ></circle>
                                    </g>
                                </svg>
                                <input
                                    id="login-password"
                                    type="password"
                                    placeholder="Password"
                                    name="password"
                                    required
                                />
                                <div>
                                    <a class="link link-hover"
                                        >Forgot password?</a
                                    >
                                </div>
                            </label>
                            <div class="validator-hint">Required</div>
                            <button type="submit" class="btn mt-4 btn-neutral">
                                Login
                            </button>
                        </fieldset>
                    </form>
                    <div class="divider"></div>
                    <div class="text-sm">
                        <span class="mr-[.5ch]">New user ?</span>
                        <a href="/signup" class="link link-primary link-hover"
                            >Sign Up</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer.ejs') %>
