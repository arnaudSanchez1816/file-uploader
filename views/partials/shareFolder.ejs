<dialog id="share-folder-dialog" class="modal modal-middle">
    <div class="modal-box">
        <h3 class="text-lg font-bold mb-2">
            Share folder <span>"<%= folder.name %>"</span>?
        </h3>
        <form
            id="share-folder-form"
            method="post"
            action="<%= `/folders/${folder.id}/share`%>"
        >
            <ul
                class="items-center w-full text-sm font-medium text-neutral border border-base-content/20 rounded-lg sm:flex"
            >
                <li
                    class="w-full border-b border-base-content/20 sm:border-b-0 sm:border-r"
                >
                    <div class="flex items-center pl-3">
                        <input
                            id="share-duration-1"
                            class="radio radio-accent"
                            type="radio"
                            name="duration"
                            value="1"
                            aria-label="1 day"
                            checked
                            required
                        />
                        <label
                            for="share-duration-1"
                            class="w-full py-3 ms-2 text-sm font-medium text-base-content"
                            >1 day</label
                        >
                    </div>
                </li>
                <li
                    class="w-full border-b border-base-content/20 sm:border-b-0 sm:border-r"
                >
                    <div class="flex items-center pl-3">
                        <input
                            id="share-duration-30"
                            class="radio radio-accent"
                            type="radio"
                            name="duration"
                            value="30"
                            aria-label="30 days"
                            required
                        />
                        <label
                            for="share-duration-30"
                            class="w-full py-3 ms-2 text-sm font-medium text-base-content"
                            >30 days</label
                        >
                    </div>
                </li>
                <li
                    class="w-full border-b border-base-content/20 sm:border-b-0"
                >
                    <div class="flex items-center pl-3">
                        <input
                            id="share-duration-0"
                            class="radio radio-accent"
                            type="radio"
                            name="duration"
                            value="0"
                            aria-label="Unlimited"
                            required
                        />
                        <label
                            for="share-duration-0"
                            class="w-full py-3 ms-2 text-sm font-medium text-base-content"
                            >Unlimited</label
                        >
                    </div>
                </li>
            </ul>
        </form>
        <div class="modal-action">
            <button
                type="submit"
                form="share-folder-form"
                class="btn btn-primary"
            >
                Share
            </button>
            <form method="dialog">
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button aria-hidden="true">Close</button>
    </form>
</dialog>
