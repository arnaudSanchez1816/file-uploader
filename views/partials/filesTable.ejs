<div class="flex flex-col gap-2 grow">
    <!-- Header -->
    <div
        class="grid grid-cols-[3fr_minmax(70px,_1fr)_minmax(70px,_1fr)] text-left shrink-0 px-4"
    >
        <div>Name</div>
        <div>Size</div>
        <div>Created</div>
    </div>
    <!-- Files/folders -->
    <% if (files.length <= 0) { %>
    <div class="grow flex justify-center items-center">
        <p class="font-medium text-xl text-base-content/60">
            There is nothing here
        </p>
    </div>
    <% } else { %>
    <% files.forEach(file => { %>
    <% if(file.type === FileType.FILE) {%>
    <%- include('components/file.ejs', { file, filesize}) %>
    <% } else { %>
    <%- include('components/folder.ejs', { folder:file }) %>
    <% } %>
    <% }) %>
    <% } %>
</div>
